<?xml version="1.0" encoding="utf-8"?>
<modification>
	<name>Opencart picture tag</name>
	<version>0.0.1</version>
	<author>JD</author>
	<link>zelenuj@gmail.com</link>
	<code>Opencart picture tag</code>
	<file path="catalog/controller/extension/module/slideshow.php">
		<operation>
		    <search><![CDATA[
		    'image' => $this->model_tool_image->resize($result['image'], $setting['width'], $setting['height'])
		    ]]></search>
		    <add position="after"><![CDATA[
					// << opencart-image-picture-tag
					,
					'picture' => $this->load->controller('extension/module/picture/create_srcset',
						[
							'title' =>  $result['title'],
							'image' =>  $result['image'],
							'width' =>  $setting['width'],
							'height' => $setting['height'],
							'class'	=>	'img-responsive',
						]
				    ),
					// >> opencart-image-picture-tag
		    ]]></add>
		</operation>
	</file>
	<file path="catalog/view/theme/*/template/extension/module/slideshow.twig">
		<operation>
		    <search><![CDATA[
		    <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
		    ]]></search>
		    <add position="before"><![CDATA[
		    {# // << kotygor_opencart_image_picture_tag.ocmod.xml #}
		    {% if banner.picture %}
		    {{ banner.picture }}
		    {% else %}
		    {# // >> kotygor_opencart_image_picture_tag.ocmod.xml #}
		    ]]></add>
		</operation>
		<operation>
		    <search><![CDATA[
		    <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
		    ]]></search>
		    <add position="after"><![CDATA[
		    {# // << kotygor_opencart_image_picture_tag.ocmod.xml #}
		    {% endif %}
		    {# // >> kotygor_opencart_image_picture_tag.ocmod.xml #}
		    ]]></add>
		</operation>
	</file>
</modification>